{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@realtime-labs/shared": ["shared/dist/index"],
      "@shared/*": ["shared/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
